# 集成测试环境变量配置
# 用于运行集成测试的环境配置

# API 配置
VITE_API_BASE_URL=http://localhost:8001/api/v1
VITE_API_TIMEOUT=30000

# 测试配置
NODE_ENV=test
TEST_TIMEOUT=120000
TEST_RETRY_COUNT=3

# 数据库配置 (用于测试数据管理)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5433/stok_test
TEST_REDIS_URL=redis://localhost:6380/0

# 性能测试配置
PERFORMANCE_TEST_TIMEOUT=60000
PERFORMANCE_TEST_CONCURRENT_USERS=10
PERFORMANCE_TEST_DURATION=30

# 安全测试配置
SECURITY_TEST_TIMEOUT=30000
SECURITY_TEST_MAX_RETRIES=5

# 日志配置
LOG_LEVEL=info
TEST_LOG_LEVEL=debug

# 报告配置
TEST_REPORT_DIR=./test-results
TEST_REPORT_FORMAT=html,json