{
  "name": "stock-trading-frontend",
  "version": "1.0.0",
  "description": "Stock Trading Backtest Decision System Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:integration:ci": "vitest run tests/integration --reporter=verbose --reporter=junit --outputFile=test-results/junit.xml",
    "test:integration:api": "vitest run tests/integration/api-integration.test.ts --reporter=verbose",
    "test:integration:workflow": "vitest run tests/integration/full-workflow.test.ts --reporter=verbose",
    "test:integration:health": "vitest run tests/integration/health-check.test.ts --reporter=verbose",
    "test:integration:performance": "vitest run tests/integration/performance.test.ts --reporter=verbose",
    "test:integration:security": "vitest run tests/integration/security.test.ts --reporter=verbose",
    "test:performance": "vitest run tests/integration/performance.test.ts --reporter=verbose",
    "test:security": "vitest run tests/integration/security.test.ts --reporter=verbose",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:unit && npm run test:integration:ci && npm run test:e2e",
    "test:docker": "cd tests/integration && docker-compose -f docker-compose.test.yml up --abort-on-container-exit --exit-code-from test-runner",
    "test:docker:build": "cd tests/integration && docker-compose -f docker-compose.test.yml build",
    "test:docker:down": "cd tests/integration && docker-compose -f docker-compose.test.yml down -v",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "pinia": "^2.1.6",
    "axios": "^1.5.0",
    "element-plus": "^2.3.12",
    "@element-plus/icons-vue": "^2.1.0",
    "echarts": "^5.4.3",
    "vue-echarts": "^6.6.1",
    "dayjs": "^1.11.9"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/tsconfig": "^0.4.0",
    "typescript": "^5.2.2",
    "vue-tsc": "^1.8.5",
    "vite": "^4.4.5",
    "vitest": "^0.34.4",
    "@vitest/ui": "^0.34.4",
    "@vitest/coverage-v8": "^0.34.4",
    "@vue/test-utils": "^2.4.1",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@types/node": "^20.5.0",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^22.1.0",
    "axios-mock-adapter": "^1.21.5",
    "@types/jsdom": "^21.1.1",
    "@playwright/test": "^1.38.1",
    "playwright": "^1.38.1"
  }
}